<p style="color: green"><%= notice %></p>



<div class="center">
  <div id="listings">
    <div class="row">
      <% @listings.each do |listing| %>
        <div class="col-md-3">
          <div class="thumbnail">
            <%= image_tag listing.image.url %>
            <div class="caption">
              <h3><%= listing.name %></h3>
              <p> <%= number_to_currency(listing.price) %></p>
              <p><%= listing.description %></p>
              <%= link_to "Show this listing", listing, class: "btn btn-link" %>
              <%= link_to "Edit this listing", edit_listing_path(listing), class: "btn btn-link"  %> 
              <%= link_to "Destroy this listing", listing, method: :delete, class:"btn btn-link"%>
            </div>
          </div>
        </div>
      <% end %>
    </div>
</div>
<br/>
<%= link_to "New listing", new_listing_path, class: "btn btn-link"  %>
